lem array_split<T>(p: *T, offset: i32);
    req [?f]p[..?count] |-> ?vs &*& 0 <= offset &*& offset <= count;
    ens
        [f]p[..offset] |-> take(offset, vs) &*& [f]p[offset..count] |-> drop(offset, vs) &*&
