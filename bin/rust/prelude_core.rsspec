lem vals__of_u8s__take<T>(count0: usize, bs: list<option<u8>>, count: usize);
    req length(bs) == count * std::mem::size_of::<T>() &*& 0 <= count0 &*& count0 <= count;
    ens vals__of_u8s_::<T>(take(count0 * std::mem::size_of::<T>(), bs), count0) == take(count0, vals__of_u8s_::<T>(bs, count));

