pred_ctor full_borrow_content_at_lft<T>(k: lifetime_t, t: thread_id_t, p: *T)() =
    points_to_at_lft(k, p, ?v) &*& <T>.own(t, v);

lem full_borrow_at_lft_to_full_borrow<T>(k: lifetime_t, k0: lifetime_t, t: thread_id_t, p: *T);
