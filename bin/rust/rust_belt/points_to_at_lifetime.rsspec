    ens full_borrow(k, <T>.full_borrow_content(t, p));

pred array_at_lft_<T>(k: lifetime_t, p: *T, n: usize; vs: list<option<T>>) =
    pointer_within_limits(p) == true &*&
    if n == 0 {
        vs == []
    } else {
        points_to_at_lft_(k, p, ?v) &*& array_at_lft_(k, p + 1, n - 1, ?vs0) &*&
        vs == cons(v, vs0)
