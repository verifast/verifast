    ens close_array_at_lft_token(f, k, p, n, q) &*& [f](p[..n] |-?-> vs);

lem open_array_at_lft<T>(p: *T);
    req [?f]array_at_lft::<T>(?k, p, ?n, ?vs) &*& [?q]lifetime_token(k);
    ens close_array_at_lft_token(f, k, p, n, q) &*& [f](p[..n] |-> vs);

lem close_array_at_lft_<T>(p: *T);
