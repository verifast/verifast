lem close_array_at_lft<T>(p: *T);
    req close_array_at_lft_token(?f, ?k, p, ?n, ?q) &*& [f](p[..n] |-> ?vs);
    ens [f]array_at_lft(k, p, n, vs) &*& [q]lifetime_token(k);

lem u8s_at_lft__to_array_at_lft_<T>(p: *T, size: usize);
